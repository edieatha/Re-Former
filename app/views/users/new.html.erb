<%# Manual form creation %>

<form action = "/users" method="POST" name = "users" accept-charset="UTF-8">
    <input type = "hidden" name="authenticity_token" value="<%= form_authenticity_token %>%">

    <label for="user[username]">Username</label> <br>
    <input id="username" type="text" name="user[username]"> <br>
    
    <label for="user[email]">Email</label> <br>
    <input id="email" type="email" name="user[email]"> <br>

    <label for="user[password]">Password</label> <br>
    <input id="password" type="password" name="user[password]"> <br>

    <input id="submit" type="submit" value="create user">

</form>
